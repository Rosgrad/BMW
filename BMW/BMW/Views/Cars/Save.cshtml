@model BMW.Domain.Entity.Cars
@{
    ViewBag.Title = "CreateCars";
}

<div style="padding: 10px;"></div>
 <div class="col-md-12">
    <div class="card-body">
        <div class="card card-outline-secondary" style="background-color: white">

            <div class="card-body">
                <form asp-action="Save" enctype="multipart/form-data">
                    <input asp-for="Id" hidden />
                    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" classa="form-control" type="text">
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">₽</span>
                        <input asp-for="Price" type="text" class="form-control">
                        <span class="input-group-text">.00</span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TypeCar"></label>
                        <textarea asp-for="TypeCar" class="form-control"></textarea>
                    </div>
                    <button class="btn btn-primary btn-lg float-right" type="submit">Отправить</button>
                </form>
            </div>
        </div>
    </div>
</div>